{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES5",
    "outDir": "dist/cjs",
    "moduleResolution": "Node10"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__mocks__/**/*", "src/**/__tests__/**/*"]
}